<% counter = 1 %>
<section>
    <% @current_all_vibes.each do |vibe| %>
        <h1 class="vibe-title"><%=vibe.name%></h1>
        <div class="slideshow-container">
            <% vibe.posts.each do |post| %>
                <div class="slide-cards sliders<%=counter%> fade">
                    <h3> <%= post.title %> </h3>
                    <p> <%= post.post_body %> </p>
                    <%= post.song_uri %>
                </div>
            <% end %>
            <a class="prev" onclick="plusSlides(-1, <%= counter - 1 %>)">&#10094;</a>
            <a class="next" onclick="plusSlides(1, <%= counter - 1 %>)">&#10095;</a>
        </div>
        <% counter += 1 %>
        <% if counter > 3 %>
            <% break %>
        <% end %>
    <% end %>
</section>