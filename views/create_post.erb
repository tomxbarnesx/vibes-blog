<h1>Create Post</h1>

<form action="/create-post" method="post">
    <input type="text" name="title" id="title" placeholder="Title" required>
    <input type="text" name="song_uri" id="song_uri" placeholder="Spotify Embed Code" required>
    <br>
    <textarea name="post_body" class="post-body" id="post_body" placeholder="Post Body" required></textarea>
    <br>
    <div id="multiboys">
        <div class="multiselect vibesmulti">
            <div class="selectBox" onclick="showCheckboxes()">
                <select>
                    <option>Select Vibes</option>
                </select>
                <div class="overSelect">
                </div>
            </div>
            <div id="checkboxes-vibes" class="checkboxes">
                <% @current_all_vibes.each do |vibe| %>
                    <div class="check-option"><input type="checkbox" name="vibetag[]" value="<%= vibe.name %>"><p><%= vibe.name %></p></div>
                <% end %>
            </div>
        </div>
        <input type="submit" class= "go-button-post" value="Go">
    </div>
</form>